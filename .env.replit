# Replit PostgreSQL база данных
# Настройки для подключения к локальной PostgreSQL базе данных Replit
DATABASE_PROVIDER=replit
NODE_ENV=production
PUBLIC_MODE=production
PORT=3000
VITE_BOT_USERNAME=UniFarming_Bot
VITE_APP_NAME=UniFarm
USE_OPTIMIZED_REFERRALS=false
DATABASE_URL=postgresql://runner@localhost:5432/postgres?host=/home/runner/.postgresql/sockets
PGHOST=localhost
PGPORT=5432
PGUSER=runner
PGPASSWORD=
# Установка полного пути к сокету для некоторых инструментов (таких как psql)
PGSOCKET=/home/runner/.postgresql/sockets
PGDATABASE=postgres
USE_LOCAL_DB_ONLY=true