run = "node stable-server.js"
modules = ["postgresql-16", "nodejs-20"]

[nix]
channel = "stable-23_05"
packages = ["postgresql", "jq", "wget", "lsof", "git", "unzip"]

[env]
DATABASE_PROVIDER = "neon"
NODE_ENV = "production"
PORT = "3000"
USE_NEON_DB = "true"
ALLOW_BROWSER_ACCESS = "true"
SKIP_TELEGRAM_CHECK = "false"

[deployment]
run = ["sh", "-c", "node stable-server.js"]
deploymentTarget = "cloudrun"
ignorePorts = false
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 5173
exposeLocalhost = true

[[ports]]
localPort = 24678
externalPort = 3000

[workflows]
runButton = "Stable Server"

[[workflows.workflow]]
name = "Stable Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node stable-server.js"

[[workflows.workflow]]
name = "Development Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Build and Start"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node stable-server.js"

[[workflows.workflow]]
name = "Database Operations"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:push"
