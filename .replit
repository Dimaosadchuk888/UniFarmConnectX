run = "NODE_ENV=production PORT=3000 node start-unified.js"
modules = ["nodejs-20:v8-20230920-bd784b9", "postgresql-16"]

[nix]
channel = "stable-23_05"
packages = ["postgresql"]

[env]
DATABASE_PROVIDER = "replit"
NODE_ENV = "production"
PORT = "3000"

[deployment]
run = ["sh", "-c", "PORT=3000 NODE_ENV=production DATABASE_PROVIDER=replit node start-unified.js"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5432
externalPort = 3000
