{
  "workflows": {
    "start-app": {
      "name": "Start App with Replit PostgreSQL",
      "onlyRunOnReopen": false,
      "restartOn": {},
      "restartOnFiles": ["**/*.js", "**/*.ts"],
      "command": ["npx", "tsx", "server/index.ts"]
    },
    "dev-server": {
      "name": "Development Server",
      "onlyRunOnReopen": false,
      "restartOn": {},
      "restartOnFiles": ["**/*.js", "**/*.ts", "**/*.tsx"],
      "command": ["npm", "run", "dev"]
    },
    "setup-postgres": {
      "name": "Setup PostgreSQL Database",
      "onlyRunOnReopen": false,
      "restartOn": {},
      "restartOnFiles": [],
      "command": ["bash", "./start-postgres.sh"]
    },
    "migrate-schema": {
      "name": "Migrate Database Schema",
      "onlyRunOnReopen": false,
      "restartOn": {},
      "restartOnFiles": [],
      "command": ["node", "migrate-direct.cjs"]
    },
    "create-partitions": {
      "name": "Setup Partitioned Tables",
      "onlyRunOnReopen": false,
      "restartOn": {},
      "restartOnFiles": [],
      "command": ["node", "fix-partition-schema.cjs"]
    },
    "Stable Server": {
      "name": "Stable Server",
      "onlyRunOnReopen": false,
      "restartOn": {},
      "restartOnFiles": ["**/*.js", "**/*.ts", "**/*.tsx"],
      "command": ["npx", "tsx", "server/index.ts"]
    }
  }
}