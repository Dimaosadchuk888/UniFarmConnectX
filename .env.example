# UniFarm Environment Configuration Template

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=your_database_url_here
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=UniFarming_Bot
TELEGRAM_WEBHOOK_URL=${APP_URL}/api/telegram/webhook
TELEGRAM_WEBAPP_URL=${APP_URL}

# Application URLs (автоматически определяется из REPLIT_DEV_DOMAIN)
APP_URL=${REPLIT_DEV_DOMAIN}
VITE_API_BASE_URL=${APP_URL}/api/v2
CORS_ORIGINS=${APP_URL}

# Frontend Environment Variables (VITE_ prefix required)
VITE_TELEGRAM_BOT_USERNAME=UniFarming_Bot
VITE_WEB_APP_URL=${APP_URL}

# Security Configuration
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Features Configuration
USE_OPTIMIZED_REFERRALS=true
SKIP_TELEGRAM_CHECK=false
ALLOW_BROWSER_ACCESS=true

# Database Strategy
DATABASE_PROVIDER=neon
USE_NEON_DB=true
USE_LOCAL_DB=false
ALLOW_MEMORY_FALLBACK=false
USE_MEMORY_SESSION=false

# Admin Panel
ADMIN_USERNAMES=admin1,admin2
ADMIN_SECRET=your_admin_secret_here