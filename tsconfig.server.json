{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": false,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "server/index.ts",
    "core/**/*",
    "config/**/*",
    "types/**/*",
    "modules/**/*"
  ],
  "exclude": [
    "client/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "server/check-*.ts",
    "server/create-*.ts",
    "server/direct-*.ts",
    "server/fix-*.ts",
    "server/force-*.ts",
    "server/simple-*.ts",
    "server/test-*.ts",
    "server/analyze-*.ts",
    "server/setupViteIntegration.ts",
    "scripts/**/*",
    "utils/**/*",
    "shared/**/*",
    "safe-*.ts"
  ]
}